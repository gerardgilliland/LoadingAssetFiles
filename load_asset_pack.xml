<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/black"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/linen" >
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/spacer"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_below="@id/toolbar"
        android:textSize="8.0sp" />

    <RelativeLayout
        android:screenOrientation="portrait"
        android:paddingTop="4dp"
        android:orientation="horizontal"
        android:layout_below="@id/spacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pack_name_label"
            android:text="@string/selected_pack_label"
            android:gravity="start"
            android:textColor="@color/linen"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/pack_name"
            android:text="xxxxx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/linen"
            android:layout_marginBottom="0dip"
            android:textSize="16sp"
            android:layout_below="@+id/pack_name_label"/>

        <TextView
            android:id="@+id/spacer1"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip"
            android:layout_below="@id/pack_name"
            android:textSize="8.0sp" />

        <TextView
            android:id="@+id/pack_location_label"
            android:text="Pack Location:"
            android:gravity="start"
            android:textColor="@color/linen"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/spacer1"/>

        <TextView
            android:id="@+id/pack_location"
            android:text="yyyy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/linen"
            android:layout_marginBottom="0dip"
            android:textSize="16sp"
            android:layout_below="@+id/pack_location_label"/>

        <TextView
            android:id="@+id/spacer2"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip"
            android:layout_below="@id/pack_location"
            android:textSize="8.0sp" />

        <TextView
            android:id="@+id/completion_label"
            android:text="Percent Download Completed:"
            android:gravity="start"
            android:textColor="@color/linen"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/spacer2"/>

        <TextView
            android:id="@+id/pack_completion"
            android:text="   0 %"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/linen"
            android:layout_marginBottom="0dip"
            android:textSize="16sp"
            android:layout_below="@+id/completion_label"/>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            style="@style/ButtonBar"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#000000" >

            <Button
                android:id="@+id/return_button"
                style="@style/ButtonBarButton"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textColor="@drawable/text_state"
                android:background="@drawable/background_state"
                android:text="@string/return_label"/>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>      